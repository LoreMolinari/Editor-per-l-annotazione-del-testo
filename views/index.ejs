<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RecogitoJS</title>

    <link rel="stylesheet" href="/css/recogito.min.css" />

    <!--JQuery-->
    <script src="/js/recogito.min.js" rel="preload"></script>
    <script src="/js/jquery-3.6.3.min.js" rel="preload"></script>

    <!--Diff-->
    <script
      type="text/javascript"
      src="/js/diff_match_patch_uncompressed.js"
    ></script>

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.css"
      rel="stylesheet"
    />

    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.3.0/mdb.min.js"
    ></script>

    <!--My Style-->
    <link rel="stylesheet" href="/scss/styles.css" />
  </head>
  <body>
    <!--Main Navigation-->
    <header>
      <!-- Background image -->
      <div
        id="intro"
        class="p-5 text-center bg-image shadow-1-strong"
        style="background-image: url('/img/bg.png')"
      >
        <div class="mask" style="background-color: rgba(0, 0, 0, 0.7)">
          <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white px-4">
              <h1>Editor Annotativo</h1>
              <p id="usernameParagraph">Utente:</p>
              <div id="content" class="plaintext textContainer"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- Background image -->
    </header>

    <!--Footer-->
    <footer class="bg-light text-lg-start">
      <div class="py-4 text-center">
        <button
          type="button"
          class="btn btn-primary"
          onclick="listAnnotations()"
        >
          Annotazioni (console)
        </button>
        <button
          type="button"
          class="btn btn-primary"
          onclick="saveAnnotations()"
        >
          Salva le annotazioni
        </button>
      </div>

      <hr class="m-0" />
    </footer>
    <!--Footer-->

    <script>
      var r;

      var diff;
      var ann;
      var txt;

      (function () {
        $("#content").load("/text");

        var user = localStorage.getItem("user");
        // Controlla se l'username è valido e lo inserisce nel paragrafo se presente
        if (user && user.trim() !== "") {
          var usernameParagraph = document.getElementById("usernameParagraph");
          usernameParagraph.append(" " + user);
        }

        r = Recogito.init({
          content: "content",
          locale: "auto",
          allowEmpty: false,
          editorAutoPosition: true,
          mode: "html",
          widgets: [
            { widget: "COMMENT" },
            {
              widget: "TAG",
              vocabulary: [
                // TAG POSSIBILI DI DEFAULT
                "Generic",
              ],
            },
          ],
          relationVocabulary: ["isRelated", "isPartOf", "isSameAs"],
        });

        fetch("/tag")
          .then((res) => res.json())
          .then((data) => {
            for (index in data.itemListElement) {
              r.widgets[1].vocabulary.push(
                data.itemListElement[index].item.name
              );
            }
          });

        // events handlers
        r.on("selectAnnotation", function (a) {
          console.log("selected", a);
        });

        r.on("createAnnotation", function (a) {
          console.log("created", a);
        });

        r.on("updateAnnotation", function (annotation, previous) {
          console.log("updated", previous, "with", annotation);
        });

        r.on("cancelSelected", () => {
          console.log("Selezione rimossa");
        });

        r.on("deleteAnnotation", function (annotation) {
          console.log("Cancellata ", annotation);

        });
      })();

      function listAnnotations() {
        let annotations = r.getAnnotations();
        console.log("listAnnotations", annotations);
        // inviando questo JSON array al server si potrebberò salvare le annotazioni
      }

      //Cancello le Annotazioni che hanno parti del testo modificate dall'Editor di testo Firepad
      function deleteAnnotation(ann) {
        r.removeAnnotation(ann);
        console.log("annotazione rimossa con successo: ", ann);
        listAnnotations();
      }

      function saveAnnotations() {
        fetch("/annotations", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            user: localStorage.getItem("user"),
            annotations: r.getAnnotations(),
          }),
        }).then(alert("Annotazioni salvate correttamente"));
      }
    </script>
  </body>
</html>
